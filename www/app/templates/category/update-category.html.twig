{% extends 'base.html.twig' %}

{% block body %}
    <h1>Modifier une catégorie</h1>

    {# Afficher les informations du flashbag pour informer l'utilisateur #}
    {% for message in app.flashes('error') %}
        <div class="alert alert-warning" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(categoryForm) }}
        <div class="form-group">
            {{ form_label(categoryForm.label) }} : {{ form_widget(categoryForm.label, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(categoryForm.color) }} : {{ form_widget(categoryForm.color, {'attr': {'class': 'form-control'}}) }}
        </div>

        {{ form_widget(categoryForm.id) }}
        
        {{ form_widget(categoryForm.save, {'attr': {'class': 'btn btn-primary'}}) }}
    {{ form_end(categoryForm) }}

    <a href="{{ path('app_category') }}">Retour à l'accueil</a>
{% endblock %}